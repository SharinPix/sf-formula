{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["DOM", "DOM.Iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "verbatimModuleSyntax": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "paths": {
    "@lezer/common": ["./node_modules/@lezer/common"],
    "@lezer/highlight": ["./node_modules/@lezer/highlight"],
    "@lezer/lr": ["./node_modules/@lezer/lr"],
    "@codemirror/autocomplete": ["./node_modules/@codemirror/autocomplete"],
    "@codemirror/language": ["./node_modules/@codemirror/language"]
  }
} 