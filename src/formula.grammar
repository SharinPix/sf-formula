@top Expression { AddExpr }

AddExpr { MulExpr (AddOperator MulExpr)* }
MulExpr { Term (MulOperator Term)* }
Term { Number | String | Boolean | Variable | ParenExpr }
ParenExpr { "(" AddExpr ")" }
Variable { Identifier }

@skip { space }

@tokens {
  space { @whitespace+ }
  Number { $[0-9]+ }
  String { '"' !["]* '"' }
  Boolean { "true" | "false" }
  AddOperator { "+" | "-" | "&" }
  MulOperator { "*" }
  Identifier { $[A-Za-z_] $[A-Za-z0-9_]* }
  @precedence {Boolean, Identifier}
}

